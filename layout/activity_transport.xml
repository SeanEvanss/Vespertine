<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nightpic2"
    tools:context=".TransportActivity">

    <Button
        android:id="@+id/mrt_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:alpha="0.7"
        android:background="@drawable/outline"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/night_mrt"
        android:onClick="MrtPage"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@+id/night_bus_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/night_bus_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:alpha="0.7"
        android:background="@drawable/outline"
        android:onClick="BusPage"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/night_bus"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@+id/taxi_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mrt_button" />

    <Button
        android:id="@+id/taxi_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:alpha="0.7"
        android:background="@drawable/outline"
        android:onClick="TaxiPage"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/night_taxi"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@+id/carpark_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/night_bus_button" />

    <Button
        android:id="@+id/carpark_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:alpha="0.7"
        android:background="@drawable/outline"
        android:onClick="CarparkPage"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/night_carpark"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taxi_button" />
</android.support.constraint.ConstraintLayout>